            <h1 class="p-5">{{ steps }}</h1>
        {% else %}
            <table class="table table-dark">
                <thead>
                <tr>
                    <th>Les Ã©tapes du voyage temporel</th>
                </tr>
                </thead>
                <tbody>
                {% for row in steps|batch(8) %}
